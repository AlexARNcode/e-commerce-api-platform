{% extends 'base.html.twig' %}

{% block title %}E-commerce{% endblock %}

{% block body %}
<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
         {% for product in products %}
            <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
            <div class="card">
                <div class="d-flex justify-content-between p-3">
                <a href="{{ path('product', {slug: product.slug}) }}" class="text-decoration-none text-reset">
                    <p class="lead mb-0">{{ product.title }}</p>
                </a>
                </div>
                <a href="{{ path('product', {slug: product.slug}) }}" style="max-width: 200px; margin: auto">
                    <img src="{{ product.image }}"
                    class="card-img-top" alt="{{ product.title }}" />
                </a>
              
                <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="small"><a href="#!" class="text-muted">{{ product.category.name }}</a></p>
                    <p class="small text-danger"><s>{{ (product.price / 10) + (product.price / 10 / 5) }}€</s></p>
                </div>

                <div class="d-flex justify-content-between mb-3">
                    <a href="{{ path('product', {slug: product.slug}) }}" class="text-decoration-none text-reset">
                        <h5 class="mb-0">{{ product.title }}</h5>
                    </a>
                    <h5 class="text-dark mb-0">{{ product.price / 10 }}€</h5>
                </div>

                <div class="d-flex justify-content-between mb-2">
                    <p class="text-muted mb-0">Available: <span class="fw-bold">{{ random(1, 50)}}</span></p>
                    <div class="ms-auto text-warning">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    </div>
                </div>
                </div>
            </div>
            </div>
        {% endfor %}
    </div>
  </div>
</section>
  
  
{% endblock %}
